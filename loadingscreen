-- ðŸŒ¸ Pastel Child-Friendly Loading Screen with Footer

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")

-- Add Soft Blur Effect
local blur = Instance.new("BlurEffect")
blur.Size = 10
blur.Parent = Lighting

-- Create ScreenGui
local gui = Instance.new("ScreenGui", playerGui)
gui.Name = "ZhizhenLoading"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true

-- Main Panel
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 460, 0, 180)
frame.Position = UDim2.new(0.5, -230, 0.5, -90)
frame.BackgroundColor3 = Color3.fromRGB(245, 210, 255)
frame.BorderSizePixel = 0
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 16)

-- Glowing Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, -40, 0, 60)
title.Position = UDim2.new(0, 20, 0, 10)
title.Text = "Zhizhen HUB"
title.TextColor3 = Color3.fromRGB(255, 100, 220)
title.Font = Enum.Font.FredokaOne
title.TextScaled = true
title.BackgroundTransparency = 1

-- Loading Label (centered)
local loading = Instance.new("TextLabel", frame)
loading.Size = UDim2.new(1, -40, 0, 40)
loading.Position = UDim2.new(0, 20, 0.5, -20)
loading.Text = "Loading"
loading.TextColor3 = Color3.fromRGB(80, 50, 200)
loading.Font = Enum.Font.FredokaOne
loading.TextScaled = true
loading.BackgroundTransparency = 1

-- Sparkle effect (blinking)
task.spawn(function()
	local visible = true
	while loading and loading.Parent do
		loading.TextColor3 = visible and Color3.fromRGB(255, 100, 220) or Color3.fromRGB(150, 50, 200)
		visible = not visible
		task.wait(0.4)
	end
end)

-- Loading Bar BG (below loading)
local barBg = Instance.new("Frame", frame)
barBg.Size = UDim2.new(1, -40, 0, 18)
barBg.Position = UDim2.new(0, 20, 0.7, 0)
barBg.BackgroundColor3 = Color3.fromRGB(230, 200, 255)
barBg.BorderSizePixel = 0
Instance.new("UICorner", barBg).CornerRadius = UDim.new(0, 10)

-- Loading Bar Fill
local barFill = Instance.new("Frame", barBg)
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(255, 120, 220)
barFill.BorderSizePixel = 0
Instance.new("UICorner", barFill).CornerRadius = UDim.new(0, 10)

-- Animate Fill over 5 seconds
TweenService:Create(barFill, TweenInfo.new(5, Enum.EasingStyle.Sine), {Size = UDim2.new(1, 0, 1, 0)}):Play()

-- Footer Label (bottom)
local footer = Instance.new("TextLabel", frame)
footer.Size = UDim2.new(1, -40, 0, 20)
footer.Position = UDim2.new(0, 20, 1, -30)
footer.Text = "TikTok: @official.zhizhen"
footer.TextColor3 = Color3.fromRGB(150, 50, 200)
footer.Font = Enum.Font.Gotham
footer.TextScaled = true
footer.BackgroundTransparency = 1

-- Fade out after 5 seconds
task.delay(5, function()
	TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
	TweenService:Create(title, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
	TweenService:Create(loading, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
	TweenService:Create(barFill, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
	TweenService:Create(barBg, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
	TweenService:Create(footer, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
	wait(0.6)
	blur:Destroy()
	gui:Destroy()
end)
